<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
        <id>assembly</id>
	<formats>
		<format>zip</format>
		<format>tar.gz</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>

			<excludes>
				<exclude>org.jgrapht:jgrapht-ext:*:combined</exclude>
			</excludes>
		</dependencySet>

		<dependencySet>
			<useProjectArtifact>false</useProjectArtifact>
			<outputDirectory>lib</outputDirectory>
			<scope>runtime</scope>

			<outputFileNameMapping>jgrapht-${artifact.version}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>

			<includes>
				<include>org.jgrapht:jgrapht-ext:*:combined</include>
			</includes>
		</dependencySet>
	</dependencySets>

	<files>
		<file>
			<source>${com.basedir}/README.md</source>
		</file>
		<file>
			<source>${com.basedir}/HISTORY.md</source>
		</file>
		<file>
			<source>${com.basedir}/CONTRIBUTORS.md</source>
		</file>
		<file>
			<source>${com.basedir}/license-LGPL.txt</source>
		</file>
		<file>
			<source>${com.basedir}/license-EPL.txt</source>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/antlr-license.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/jgraphx-license.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/apache-license-2.0.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
			<destName>guava-license.txt</destName>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/apache-license-2.0.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
			<destName>commons-lang3-license.txt</destName>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/apache-license-2.0.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
			<destName>jheaps-license.txt</destName>
		</file>
		<file>
			<source>${com.basedir}/etc/licenses/apache-license-2.0.txt</source>
			<outputDirectory>3rd-party-licenses</outputDirectory>
			<destName>fastutil-license.txt</destName>
		</file>
	</files>

	<fileSets>
		<fileSet>
			<directory>${com.basedir}</directory>
			<outputDirectory>source</outputDirectory>
			<excludes>
				<exclude>**/target/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${com.basedir}/target/site/apidocs</directory>
			<outputDirectory>javadoc</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
